        box-sizing: border-box;
     }
     .box{
    
        background: #f4f4f4f4;
        border: 2px #777 solid;
        width: 500px;

        /*padding on all side  */
        padding: 20px;

        /* padding per side shorthand = top, right, bottom, left */

        padding: 10px 20px 10px 20px;

        /* padding shorthand top & bottom/ Left & Right */

        padding: 10px 20px;
        /* margin for all side */
        
        margin: 20px;
        
        /* margin on all side shorthand = top, right, bottom, left */
        
        margin: 10px 20px 10px 20px;
        
        /* margin shorthand top & bottom/ Left & Right */
        margin: 10px 20px;

     }
     
    </style>
